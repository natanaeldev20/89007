---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<section class="w-full pt-12 bg-89007 px-6 md:px-8 lg:px-8">
  <div class="max-w-6xl m-auto gap-8 py-6 grid md:grid-cols-2 lg:grid-cols-2">
    <div
      class="w-full flex flex-col items-center justify-center text-center gap-4 text-white"
    >
      <h2 class="font-bold text-3xl md:text-4xl lg:text-4xl">
        {title}
      </h2>
      <p class="text-base">
        {body}
      </p>
    </div>
    <slot />
  </div>
</section>
