---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;
---

<article
  class="w-full flex flex-col gap-4 shadow-[0_1px_3px_rgba(0,0,0,0.1),_0_1px_2px_rgba(0,0,0,0.06)] rounded-xl"
>
  <figure class="w-full">
    <img
      class="w-full aspect-video object-cover rounded-t-xl shadow-xl"
      src={url}
      alt={title}
      loading="lazy"
    />
  </figure>
  <div class="p-4">
    <h3 class="font-normal text-base">
      {title}
    </h3>
  </div>
</article>
