---
import Button from "@uiComponents/Button.astro";

interface Props {
  url: string;
  title: string;
  description: string;
  route: string;
  color: string;
}

const { url, title, description, route, color } = Astro.props;
---

<article
  class="rounded-2xl overflow-hidden shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"
  style={`background-color: ${color};`}
>
  <!-- Imagen con animación -->
  <figure class="w-full overflow-hidden">
    <img
      class="w-full aspect-video object-cover transition-transform duration-500 hover:scale-105"
      src={url}
      alt={title}
      loading="lazy"
    />
  </figure>

  <!-- Contenido -->
  <div class="w-full p-8 text-white flex flex-col justify-between h-full">
    <div>
      <h3 class="text-xl md:text-2xl font-bold mb-4 leading-snug">{title}</h3>
      <p class="text-base opacity-90 mb-8">{description}</p>
    </div>

    <!-- Botón -->
    <Button
      url={route}
      bg="#fff"
      color="#000"
      transform="none"
      weight="600"
      text="Conoce más"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
      >
        <path
          fill="#000"
          d="M12.293 5.293a1 1 0 0 1 1.414 0l6 6a1 1 0 0 1 0 1.414l-6 6a1 1 0 0 1-1.414-1.414L16.586 13H5a1 1 0 1 1 0-2h11.586l-4.293-4.293a1 1 0 0 1 0-1.414"
        ></path>
      </svg>
    </Button>
  </div>
</article>
