---
interface Props {
  url: string;
  name: string;
  role: string;
  message: string;
}

const { url, name, role, message } = Astro.props;
---

<article class="bg-white rounded-2xl shadow-xl overflow-hidden w-full mx-auto">
  <figure class="w-full aspect-square object-cover overflow-hidden">
    <img src={url} alt={name} class="w-full h-full object-cover" />
  </figure>
  <div class="p-6 text-center">
    <h3 class="text-xl font-semibold text-gray-800 mb-1">{name}</h3>
    <p class="text-sm text-[#039fcf] font-medium mb-3">{role}</p>
    <p class="text-gray-700 text-base">
      {message}
    </p>
  </div>
</article>
