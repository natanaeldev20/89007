---
import BaseLayout from "@layouts/BaseLayout.astro";
import FormContainer from "@sections/levels/FormContainer.astro";
import ProposedIntroduction from "@sections/levels/ProposedIntroduction.astro";
import EducationApproach from "@sections/levels/EducationApproach.astro";
import WhyChoose from "@sections/levels/WhyChoose.astro";
import PrimaryEducationalProposal from "@sections/levels/PrimaryEducationalProposal.astro";
import Location from "@components/ui/Location.astro";

import PrimaryForm from "@components/levels/PrimaryForm";
import { primaryFocus } from "@data/primaryFocus";
---

<BaseLayout
  title="Educación Primaria | Institución Educativa N.º 89007"
  description="Descubre los programas de educación primaria en la Institución Educativa N.º 89007 en Chimbote, Perú, ofreciendo enseñanza de calidad y formación integral para todos los estudiantes."
  url="https://institucioneducativa89007-4fzq.vercel.app/niveles/educacion-primaria"
>
  <FormContainer
    title="Educación en Primaria"
    body="Desarrollamos una metodología de enseñanza primaria capaz de bridarle a los estudiantes herramientas para generar un aprendizaje autónomo."
  >
    <PrimaryForm client:load />
  </FormContainer>
  <ProposedIntroduction
    title="en Primaria"
    body="Nuestra propuesta educativa ha sido diseñada para preparar a nuestros estudiantes de primaria a enfrentar los retos del futuro con un método de enseñanza innovador, infraestructura moderna y una formación de líderes en valores."
    url="https://res.cloudinary.com/dezz9ntar/image/upload/f_auto,q_auto,w_800/v1753159253/IMG_20250710_155414_yykooh.jpg"
  />
  <EducationApproach title="nivel Primaria" array={primaryFocus} />
  <WhyChoose
    title="colegio de Primaria"
    body="En la Institución Educativa N.° 89007, promovemos una formación integral en el nivel Primaria, fomentando el trabajo colaborativo y el pensamiento crítico. Nuestra propuesta pedagógica brinda herramientas prácticas y estrategias innovadoras que permiten a los estudiantes enfrentar con éxito los retos de su aprendizaje diario."
  />
  <PrimaryEducationalProposal />
  <Location />
</BaseLayout>
