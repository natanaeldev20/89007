---
import BaseLayout from "@layouts/BaseLayout.astro";
import FormContainer from "@sections/levels/FormContainer.astro";
import InitialForm from "@components/levels/InitialForm";
import ProposedIntroduction from "@sections/levels/ProposedIntroduction.astro";
import EducationApproach from "@sections/levels/EducationApproach.astro";
import { initialApproach } from "@data/initialApproach";
import WhyChoose from "@sections/levels/WhyChoose.astro";
import InitialEducationalProposal from "@sections/levels/InitialEducationalProposal.astro";
import Location from "@components/ui/Location.astro";
---

<BaseLayout title="Educación Inicial | Institución Educativa N.º 89007">
  <FormContainer
    title="Educación en Inicial"
    body="Aplicamos una metodología diseñada especialmente para niños de educación Inicial, enfocada en despertar su interés por descubrir, fortalecer su autonomía y fomentar la creatividad mediante actividades tanto individuales como en grupo."
  >
    <InitialForm />
  </FormContainer>
  <ProposedIntroduction
    title="en Inicial"
    body="Aplicamos una metodología diseñada especialmente para niños de educación Inicial, enfocada en despertar su interés por descubrir, fortalecer su autonomía y fomentar la creatividad mediante actividades tanto individuales como en grupo."
    url="https://www.recoleta.edu.pe/blog/wp-content/uploads/2025/05/INTERNA-NOTA-2-1024x582.jpg"
  />
  <EducationApproach title="nivel Inicial" array={initialApproach} />
  <WhyChoose
    title="colegio de Inicial"
    body="En la Institución Educativa N.º 89007 brindamos una formación temprana enfocada en el desarrollo de la autonomía infantil, promoviendo el aprendizaje a partir de experiencias significativas y estímulos del entorno. Además, fomentamos el trabajo en equipo desde el nivel Inicial, con el objetivo de fortalecer la confianza de nuestros niños, su capacidad para relacionarse con los demás y enfrentar con seguridad los nuevos retos que les presenta su entorno."
  />
  <InitialEducationalProposal />
  <Location />
</BaseLayout>
